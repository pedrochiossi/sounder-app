{{> navbar}}
<div class="bg-dark">
  <div class="tracks-container">
    <div id="tracks-header">
      <form action="/playlists/add-to-spotify" method="post">
        <input type="text" name="playlist_name" id="playlist-name" placeholder="New playlist name">
        <button type="submit" id="add-playlist-button">Add to Spotify</button>
      </form>
    </div>
    <ul class="w3-ul w3-card-2 w3-small">
      {{#each myTracks}}
      <li class="w3-bar">
        <img src={{this.album.images.0.url}} class=" album w3-bar-item w3-circle" style="width: 50px; height: 50px;">
        <audio class="audio-preview" src="{{this.preview_url}}"></audio>
        <div class=" track-info w3-bar-item">
          <span class="w3-large">{{this.name}}</span><br>
          <span class="artist">{{this.artists.0.name}}</span>
        </div>
        <div class=" track-link w3-bar-item w3-right">
          <button value="{{this.spotify_id}}" title="Add to my Spotify library" class="add-track-button material-icons md-light">add_box</button>
          <a title="Open track in Spotify" class="material-icons md-light" href="http://open.spotify.com/track/{{this.spotify_id}}">open_in_new</a>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
  
<script src="javascripts/tracks-script.js"></script>
